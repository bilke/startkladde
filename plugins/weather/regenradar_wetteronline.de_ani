#!/bin/bash

imagefile="/tmp/radar_ani.gif"

download()
{
	wget "--user-agent=Mozilla/4.0 (compatible; MSIE 6.0; Windows NT 5.1)" "$@"
}

echo "[MSG] [Radarfilm wird heruntergeladen]"

# Wetterradarfilm herunterladen (4 h)
if download -O $imagefile http://www.wetteronline.de/daten/radar/dwddg/vie.gif; then
	mogrify -delay 25 "$imagefile"
	echo "[MOV] [$imagefile]"
else
	echo "[MSG] [Fehler beim Abrufen des Radarfilms]"
fi


