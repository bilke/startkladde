#!/bin/bash

imagefile=/tmp/radar_ani.gif

num=0
while [ -e "$imagefile" -a ! -w "$imagefile" ]; do
	imagefile="/tmp/radar-${num}.gif"
	num=$(($num+1))
done

echo "[MSG] [Radarfilm wird heruntergeladen]"

# Wetterradarfilm herunterladen (4 h)
if wget -O $imagefile http://imgs.www.wetter.com/v2/img/wx/RADAR_w30/radar_DE/v2/l/ani_DE__240.gif; then
	mogrify -delay 25 "$imagefile"
	echo "[MOV] [$imagefile]"
else
	echo "[MSG] [Fehler beim Abrufen des Radarfilms]"
fi


