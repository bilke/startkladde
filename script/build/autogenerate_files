#!/bin/bash

# This script generates the files normally generated by the Makefile.

mkdir -p build
./script/build/generate_migration_headers.rb
erb      src/migrations.pro.erb              >build/migrations.pro    || rm build/migrations.pro
erb -T 1 src/db/schema/CurrentSchema.cpp.erb >build/CurrentSchema.cpp || rm build/CurrentSchema.cpp

cd version; ./make_version; cd ..

